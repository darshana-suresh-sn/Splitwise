    <sp_widget action="DELETE">
        <category>custom</category>
        <client_script><![CDATA[api.controller=function($rootScope) {
	/* widget controller */
	var c = this;
	c.groupObj = {};

	$rootScope.$on('$sp.list.click',function(e, response) {
		if(response && response.sys_id)
			{
				c.groupObj.sys_id = response.sys_id;
				if(response.record && response.record.display_field)
					c.groupObj.name = response.record.display_field.display_value;
				c.server.get({
					data:c.groupObj.sys_id,
					action:'getGroupExpenses'
				}).then(function(result){
					c.groupObj.expenseList = result.data.expenses;
				});
			}
	});
	
};]]></client_script>
