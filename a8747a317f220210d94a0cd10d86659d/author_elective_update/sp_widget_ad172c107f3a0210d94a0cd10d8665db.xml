        <name>Expense group list</name>
        <option_schema/>
        <public>false</public>
        <roles/>
        <script><![CDATA[(function() {
	/* populate the 'data' object */
	/* e.g., data.table = $sp.getValue('table'); */
	var getGroupList = function()
	{
		var gr = new GlideRecord('sn_splitwise_group');
		gr.query();
		data.expense_groups = [];
		while (gr.next()) {
			var groupObj = {};
			$sp.getRecordDisplayValues(groupObj, gr, 'name,group_id');
			data.expense_groups.push(groupObj);
		}
	};
	var getExpenseList = function(group_id)
	{
		var gr = new GlideRecord('sn_splitwise_expense');
		gr.addQuery('group_id',group_id);
		gr.query();
		data.expenses = [];
		while (gr.next()) {
			var expenseObj = {};
			$sp.getRecordDisplayValues(expenseObj, gr, 'expense_name,paid_by,total_amount');
			data.expenses.push(expenseObj);
		}		
	}
	
	if(input && input.action=='getGroupExpenses')
	{
		getExpenseList(input.data);
	}

})();]]></script>
