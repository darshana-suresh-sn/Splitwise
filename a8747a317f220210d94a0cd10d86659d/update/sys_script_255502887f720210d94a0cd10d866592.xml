        <script><![CDATA[(function executeRule(current, previous /*null when async*/) {
	var validateMemberList = function()
	{
		var memberList = current.members ? current.members.split(',') : null;
		var maxCount = gs.getProperty('sn_splitwise.max_group_size');
		
		if(!memberList || memberList.length ==0 || memberList.length > maxCount)
		{
			gs.addErrorMessage('List of members should have at least 1 member and at most '+maxCount+' members');
			current.setAbortAction(true);
		}
	};
	validateMemberList();
})(current, previous);]]></script>
