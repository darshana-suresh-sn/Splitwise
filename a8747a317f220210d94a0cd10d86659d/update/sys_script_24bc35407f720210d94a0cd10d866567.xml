        <script><![CDATA[(function executeRule(current, previous /*null when async*/) {

	var isAmountOwedValid = function()
	{
		var gr = new GlideRecord('sn_splitwise_expense');
		gr.addQuery('expense_id',current.expense_id);
		gr.addQuery('group_id',current.group_id);
		gr.query();
		if(gr.next() && gr.total_amount<current.amount_owed) return false;
		return true;
	};

	if(!isAmountOwedValid())
	{
		gs.addErrorMessage("Amount owed cannot be more than total expense");
		current.setAbortAction(true);
		return;
	}
	if(!isGroupMember(current.member, current.group_id))
	{
		gs.addErrorMessage("User should be part of the splitwise group");
		current.setAbortAction(true);
		return;
	}

})(current, previous);]]></script>
