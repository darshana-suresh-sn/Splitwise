        <api_name>sn_splitwise.isGroupMember</api_name>
        <caller_access/>
        <client_callable>false</client_callable>
        <description>Check if given user is member of given splitwise group</description>
        <mobile_callable>false</mobile_callable>
        <name>isGroupMember</name>
        <script><![CDATA[function isGroupMember(memberID, groupID){
	var gr = new GlideRecord('sn_splitwise_group');
	gr.get('group_id',groupID);
	if(gr){
		var userList = gr.members.getValue().split(',');
		for(var i=0;i<userList.length;++i)
		{
			if(userList[i]==memberID) return true;//user found
		}
	}
	return false;
} ]]></script>
